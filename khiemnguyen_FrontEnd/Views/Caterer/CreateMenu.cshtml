		<!-- Preloader End -->
		<!-- Header Section End -->
		<!-- Hero Section Start -->
		<section id="single-shop-section">
			<div class="single-shop-section-img">
				<div class="menupage-1-overlay"></div>
				<div class="menupage-1-conten">
					<h1 class="blog1-hero-txt1 wow fadeInDown" data-wow-duration="1s" data-wow-delay="2.5s">Single Dish</h1>
				</div>
			</div>
			<div class="breadcrumb-section">
				<div class="container">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="@Url.Action("Index","Caterer")">
								<span class="home-icon">
									<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
